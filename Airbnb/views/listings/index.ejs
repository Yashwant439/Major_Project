<% layout("./layouts/boilerplate.ejs") -%>
    <!-- the above line help krta hai lesser code likhne me  -->
    
    <style>

        #filters{
            display: flex;
            flex-wrap: wrap;
            /* background-color: aqua; */
        }

        .filter{
            text-align: center;
            margin-right: 2.5rem;
            margin-bottom: 0.7rem;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;

        }
    </style>



    <div id="filters">
        <div class="filter">
            <a href="/listings?category=Trending" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Room" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Amazing Views" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-binoculars"></i></div>
            <p>Amazing Views</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Surfing" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Surfing</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Amazing Pools" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Amazing Pools</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Beach" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Cabins" class="text-decoration-none text-dark">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Cabins</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Mountain" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?category=Iconic Cities" class="text-decoration-none text-dark">
            <div><i class="fa-solid fa-tree-city"></i></div>
            <p>Iconic Cities</p>
            </a>
        </div>
    </div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% if (allListings.length === 0) { %>
        <div class="col">
      <p class="text-center fs-4 mt-5">No listings in this category</p>
    </div>
    <% } else { %>
        <% allListings.forEach(listing => { %>
            <a href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>"
                        class="card-img-top show-img" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
        <% }); %>
    <% } %>
</div>




    