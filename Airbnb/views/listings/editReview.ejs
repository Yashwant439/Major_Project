<% layout("./layouts/boilerplate.ejs") -%>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow rounded p-4">
        <h2 class="mb-4 fw-bold text-center">Edit Your Review</h2>
        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=put" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" rows="5" class="form-control" required><%= review.comment %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Comment required</div>
          </div>
          <button class="btn btn-outline-dark " type="submit">Update Review</button>
        </form>
      </div>
    </div>
  </div>
</div>