<% layout("./layouts/boilerplate.ejs") -%>
    <!-- the above line help krta hai lesser code likhne me  -->
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your Review:</h2>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=put" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" rows="6" class="form-control"
                        required > <%= review.comment %> </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Comment required
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
        </div>
    </div>
